@{
  var showList = (model.showMenuItems) ? model.showMenuItems.PromotedShows.slice(0, 9) : [];

  function isSelected(currentController, expectedController) {

    if(currentController == expectedController) {
        return ' selected';
    }
  }
}
         
<header id="main-header">
    <a href="http://www.esquire.com" id="mobile-home"><div>Back To</div><div>Esquire</div></a>   
    <div id="header-background">
        <div id="interstitial-ad" style="display: none; position:absolute; top: 0; left: 0;" data-ad-zone="@model.AdZone" data-ad-size="[]" data-ad-keyword="@model.AdKeywords", data-ad-position="0", data-ad-device="all", data-ad-type="interstitial">
        <script type="text/javascript">googletag.cmd.push(function () { googletag.display('interstitial-ad'); });</script>
    </div>
    <div style="display: none;" id='top-ad' data-ad-zone="@model.AdZone" data-ad-size="[[728, 90],[970,90],[970,250]]" data-ad-keyword="@model.AdKeywords" data-ad-position="1" data-ad-device="desktop" data-ad-type="block">
        <script type="text/javascript">googletag.cmd.push(function () { googletag.display('top-ad'); });</script>
    </div>
 		<div id="mobile-header"></div>
 		 <div id="header-logo">
            <a href="http://www.esquire.com"><div id="esquire-logo"></div></a>
        </div>
    </div>        
    <a href="#" id="mobile-menu"></a>
    <div class="page-header">
        <div id="esquire-nav">
            <div class="container">
                <ul>                	
                    <li class="btn_universe"><a href="http://www.esquire.com/blogs/news/">NEWS</a></li>
                    <li class="btn_politic"><a href="http://www.esquire.com/blogs/politics/">POLITICS</a></li>
                    <li class="btn_style"><a href="http://www.esquire.com/blogs/mens-fashion/">STYLE</a></li>
                    <li class="btn_culture"><a href="http://www.esquire.com/blogs/culture/">ENTERTAINMENT</a></li>
                    <li class="btn_food"><a href="http://www.esquire.com/blogs/food-for-men/">FOOD &amp; DRINK</a></li>
                    <li class="btn_women"><a href="http://www.esquire.com/women/">WOMEN</a></li>
                    <li class="btn_video active"><a class="active" href="http://tv.esquire.com">ESQUIRE TV</a></li>
                </ul>
                <div class="search-area">
                    <form method="get" action="http://www.esquire.com/search/" name="header_search" id="header_search">
                        <a href="#" id="search_button"></a>
                        <input type="text" autocomplete="off" class="input" name="q" id="gen_search">
                    </form>
                </div>
            </div>
        </div>
        <div id="esquire-nav-tv">
            <div class="container">
                <ul>      
                	<li class="btn_home @isSelected(model.controller, '/')" data_tracking="homepage"><a class="btn_home" data-tracking="homepage" href="/">Esquire TV</a><i class="icon-nav-up-arrow"></i></li>          
                	<li class="btn_shows @isSelected(model.controller, '/shows')" data_tracking="shows"><a class="btn_shows" data-tracking="shows" href="/shows">Shows</a><i class="icon-nav-up-arrow"></i>
                		 <div id="shows-drop-down">
				              <div id="show-drop-down-wrapper">
				                  <div id="promoted-shows">
				                      <ul>
				                        @model.showMenuItems.TopPromotedShows.forEach(function(item){
				                          <li>
				                            <a href="@item.RelativeUrl">

				                              <div class="promo-show-item">
				                                @html.RenderResizeImageUrl(item.ThumbImage, 374, 210)
				                                <div class="promo-show-text show-info small">
				                                  <span>@item.ShowName</span>
				                                  <br />
				                                  <div class="show-info small">
                                                    @html.RenderTuneIn(item.Airtime, "small")
				                                  </div>
				                                </div>
				                              </div>
				                            </a>
				                          </li>
				                      })
				                      </ul>
				                  </div><!-- end promoted-shows -->
				                  <div class="shows-list"><!--start shows-list-->
				                    @for(var i = 0; i < showList.length; i++){
				                        var show = showList[i];
				                        if(i==0){
				                          <ul>
				                        }
				                        if(i%5 == 0 && i!=0){
				                          </ul><ul>
				                        }

				                        <li>
				                          <a href="@show.RelativeUrl"><span>@show.ShowName</span></a>
				                        </li>
				                        if(i== showList.length -1){
				                          if(showList.length == 5){
				                            </ul><ul>
				                          }
				                          <li id="show-all"><a class="show-all-link" href="/shows">ALL SHOWS</a></li>
				                        }
				                        if (i == showList.length - 1){
				                          </ul>
				                        }
				                    }
				                  </div><!-- end shows-list -->
				              </div><!-- end show-drop-down-wrapper -->
				          </div><!-- end shows-drop-down-->
                	</li>
	                <li class="btn_episodes" data_tracking="episodes"><a class="btn_episodes" data-tracking="episodes" href="/now">Full Episodes</a><i class="icon-nav-up-arrow"></i></li>
                    <li class="btn_schedule @isSelected(model.controller, '/schedule')" data_tracking="schedule"><a class="btn_schedule" data-tracking="schedule" href="/schedule">Schedule</a><i class="icon-nav-up-arrow"></i></li>
                    <li class="btn_videos" data_tracking="videos"><a class="btn_videos" data-tracking="videos" href="/videos">Videos</a><i class="icon-nav-up-arrow"></i></li>
                    <li class="btn_blog" data_tracking="blog"><a class="btn_blog" data-tracking="blog" href="/blog">Blog</a><i class="icon-nav-up-arrow"></i></li>
    
                    <li class="btn_locator @@channelFinder"><a class="btn_locator " href="/channelfinder" data-tracking="channel-locator"><i class="icon-tv"></i>Channel Finder</a><i class="icon-nav-up-arrow"></i></li>
                    <li class="social-small"><a href="https://twitter.com/esqtv" target="_blank"><i class="social-icon-twitter-small"></i></a></li>
                    <li class="social-small"><a href="https://www.facebook.com/EsquireNetwork" target="_blank" class="logo"><i class="social-icon-facebook-small"></i></a></li>
                    <li class="social-small"><a href="https://www.youtube.com/esquirenetwork" target="_blank" class="logo"><i class="social-icon-youtube-small"></i></a></li>
                </ul>
                <div class="social mobile">
                    <ul>
                        <li><a href="https://twitter.com/esqtv" target="_blank"><i class="social-icon-twitter"></i></a></li>
                        <li><a href="https://www.facebook.com/EsquireNetwork" target="_blank"><i class="social-icon-facebook"></i></a></li>
                        <li><a href="https://www.youtube.com/esquirenetwork" target="_blank"><i class="social-icon-youtube"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>